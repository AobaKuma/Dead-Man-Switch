  <RoyalTitlePermitDef>
    <defName>DMS_Platoon_MT</defName>
    <label>call squad support</label>
    <description>Call a squad of soldiers to aid you in battle.</description>
    <workerClass>RoyalTitlePermitWorker_CallAid</workerClass>
    <minTitle>DMS_Colonel</minTitle>
    <faction>DMS_Army</faction>
    <permitPointCost>1</permitPointCost>
    <uiPosition>(0,7)</uiPosition>
    <royalAid>
      <favorCost>6</favorCost>
      <pawnKindDef>DMS_Soldier</pawnKindDef>
      <pawnCount>16</pawnCount>
      <targetingRange>39.9</targetingRange>
    </royalAid>
    <cooldownDays>30</cooldownDays>
  </RoyalTitlePermitDef>
  
  <RoyalTitlePermitDef>
    <defName>DMS_Platoon_AC</defName>
    <label>call platoon support</label>
    <description>Call a platoon of soldiers to aid you in battle.</description>
    <workerClass>RoyalTitlePermitWorker_CallAid</workerClass>
    <minTitle>DMS_Brigadier</minTitle>
    <faction>DMS_Army</faction>
    <permitPointCost>1</permitPointCost>
    <prerequisite>CallMilitaryAidLarge</prerequisite>
