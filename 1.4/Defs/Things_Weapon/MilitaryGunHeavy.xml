		<graphicData>
			<texPath>Things/Weapons/DMS_Weapon_GAU19</texPath>
			<drawSize>2</drawSize>
		</graphicData>
		<statBases>
			<Mass>48</Mass>
			<MarketValue>8000</MarketValue>
			<AccuracyTouch>0.2</AccuracyTouch>
