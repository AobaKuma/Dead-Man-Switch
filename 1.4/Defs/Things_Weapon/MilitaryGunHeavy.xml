<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef Name="DMS_AutomatroidHeavyGun" ParentName="DMS_AutomatroidGun" Abstract="True">
		<statBases>
		    <MaxHitPoints>300</MaxHitPoints>
	    </statBases>
		<recipeMaker>
			<researchPrerequisites>
				<li>DMS_EquipmentHeavy</li>
		  	</researchPrerequisites>
		</recipeMaker>
		<tools Inherit="False">
			<li>
				<label>stock</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>24</power>
				<cooldownTime>3</cooldownTime>
			</li>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>24</power>
				<cooldownTime>3</cooldownTime>
			</li>
		</tools>
		<modExtensions Inherit="False">
			<li Class="HeavyWeapons.HeavyWeapon">
				<isHeavy>true</isHeavy>
				<disableOptionLabelKey>DMS.CannotEquipHeavy</disableOptionLabelKey>
			</li>
		</modExtensions>
	</ThingDef>

	
<!--HMG-->
	<ThingDef ParentName="DMS_AutomatroidHeavyGun">
		<defName>DMS_HeavyMachineGun</defName>
		<label>mech HMG</label>
		<description>heavy machine gun for mech soldier or infantry support platform.\n\nThis weapon is designed specially for automatroid use, thus normal human may be unable to use them normally without external assistance equipment or being extra strong.</description>
		<weaponClasses>
			<li>RangedHeavy</li>
			<li>LongShots</li>
			<li>Ranged</li>
		</weaponClasses>
		<weaponTags>
			<li>DMS_MechWeaponHeavy</li>
			<li>A_SuppressWeaponHeavy</li>
			<li>A_MG_Heavy</li>
		</weaponTags>
		<graphicData>
			<texPath>Things/Weapons/DMS_HeavyMachineGun</texPath>
			<drawSize>(1.75,1.75)</drawSize>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<statBases>
			<WorkToMake>60000</WorkToMake>
			<AccuracyTouch>0.65</AccuracyTouch>
			<AccuracyShort>0.70</AccuracyShort>
			<AccuracyMedium>0.70</AccuracyMedium>
			<AccuracyLong>0.65</AccuracyLong>
			<Mass>14.50</Mass>
			<RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.15</MoveSpeed>
		</equippedStatOffsets>
		<recipeMaker>
			<researchPrerequisites>
				<li>PrecisionRifling</li>
			</researchPrerequisites>
		</recipeMaker>
		<costList>
			<Tungsteel>95</Tungsteel>
			<ComponentStamped>5</ComponentStamped>		
		</costList>	
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_DMS_HeavyMachineGun</defaultProjectile>
				<warmupTime>3</warmupTime>
				<range>49.9</range>
				<ticksBetweenBurstShots>10</ticksBetweenBurstShots>
				<burstShotCount>3</burstShotCount>
				<soundCast>DMS_MachineGunHeavy_Shot</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
	</ThingDef>
	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_DMS_HeavyMachineGun</defName>
		<label>heavy machine gun bullet</label>
		<graphicData>
			<texPath>Things/Projectile/Bullet_Big</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>28</damageAmountBase>
			<stoppingPower>3</stoppingPower>
			<speed>80</speed>
		</projectile>
	</ThingDef>
	
	<!-- GAU-19A 12.7mm 雙足飛龍的主武器，也可以被猿人與戰鬥框架裝備-->
