  <!-- 合成肌肉培育槽 -->
  <RecipeDef>
    <defName>DMS_Make_Atrifuscle</defName>
    <label>grow atrifuscle</label>
    <description>grow artificial muscle,uses plasfiber as skin tungsteel as bone, gold as neurofilament and neutroamine as blood</description>
    <jobString>growing neutroamine.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <recipeUsers>
      <li>DMS_TableAtrifuscle</li>
    </recipeUsers>
    <workAmount>5000</workAmount>
     <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Gold</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Tungsteel</li>
          </thingDefs>
        </filter>
        <count>8</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Plasfiber</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Neutroamine</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Gold</li>
        <li>Tungsteel</li>
        <li>Plasfiber</li>
        <li>Neutroamine</li>        
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Atrifuscle>25</Atrifuscle>
    </products>
    <skillRequirements>
      <Medicine>8</Medicine>
    </skillRequirements>
    <workSkill>Medicine</workSkill>
  </RecipeDef>

</Defs>	