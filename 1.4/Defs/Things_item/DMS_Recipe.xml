<?xml version="1.0" encoding="utf-8"?>

<Defs>

  <!-- 反應釜 -->

  <RecipeDef>
    <defName>DMS_Make_Polyester</defName>
    <label>make polyester</label>
    <description>Synthetic polyester fibers using chemfuel.</description>
    <jobString>Synthesising.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <recipeUsers>
      <li>DMS_ReactionChamber</li>
    </recipeUsers>
    <skillRequirements>
      <Crafting>2</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <researchPrerequisite>DMS_Plasfiber</researchPrerequisite>
    <workAmount>3000</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Chemfuel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Polyester>50</Polyester>
    </products>
  </RecipeDef>

  <RecipeDef>
    <defName>DMS_Make_Plasfiber</defName>
    <label>make plasfiber</label>
    <description>Synthetic plasfiber.</description>
    <jobString>Synthesising.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <recipeUsers>
      <li>DMS_ReactionChamber</li>
    </recipeUsers>
    <skillRequirements>
      <Crafting>2</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <researchPrerequisite>DMS_Plasfiber</researchPrerequisite>
    <workAmount>8000</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Polyester</li>
            <li>Synthread</li>
          </thingDefs>
        </filter>
        <count>75</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Polyester</li>
        <li>Synthread</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Plasfiber>20</Plasfiber>
    </products>
  </RecipeDef>

  <!-- 燒結爐 -->

 <RecipeDef>
    <defName>DMS_Make_Tungsteel</defName>
    <label>make tungsteel</label>
    <description>sintering tungsteel.</description>
    <jobString>sintering.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <recipeUsers>
      <li>DMS_Furnace</li>
    </recipeUsers>
    <skillRequirements>
      <Crafting>2</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <researchPrerequisite>DMS_Material</researchPrerequisite>
    <workAmount>10000</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>StoneBlocks</li>
          </categories>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>StoneBlocks</li>
      </categories>
      <disallowedThingDefs>
        <li MayRequire="aoba.fortress.industrial">FT_BlocksConcrete</li>
        <li MayRequire="aoba.fortress.industrial">FT_WoodConcrete</li>
		    <li MayRequire="aoba.fortress.industrial">FT_ReinforcedConcreteBag</li>
      </disallowedThingDefs>
      <thingDefs>
        <li>Steel</li>
        <li>Chemfuel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Tungsteel>20</Tungsteel>
    </products>
  </RecipeDef>

