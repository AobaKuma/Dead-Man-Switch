<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- 仿生作戰服 -->
	<ThingDef ParentName="ApparelBase">
		<defName>DMS_Apparel_BionicSuit</defName>
		<label>bionic suit</label>
		<description>Physical enhancement equipment sewn from artificial muscle fibers. Can
			effectively increase the wearer's muscle strength and mobility.</description>
		<techLevel>Industrial</techLevel>
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Machining</soundWorking>
			<recipeUsers>
				<li>DMS_TableAtrifuscle</li>
			</recipeUsers>
			<researchPrerequisite>DMS_Atrifuscle</researchPrerequisite>
			<unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
		</recipeMaker>
		<costList>
			<Plasfiber>40</Plasfiber>
			<Atrifuscle>80</Atrifuscle>
			<Chemfuel>20</Chemfuel>
		</costList>
		<tradeTags>
			<li>Clothing</li>
		</tradeTags>
		<graphicData>
			<texPath>Things/Apparel/BionicSuit/Apparel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<WorkToMake>8000</WorkToMake>
			<Mass>7</Mass>
			<ArmorRating_Sharp>0.4</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.4</ArmorRating_Blunt>
			<ArmorRating_Heat>0.6</ArmorRating_Heat>
			<Insulation_Cold>18</Insulation_Cold>
			<Insulation_Heat>18</Insulation_Heat>
			<EquipDelay>15</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>1.2</MoveSpeed>
			<ToxicEnvironmentResistance>0.25</ToxicEnvironmentResistance>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Torso</li>
				<li>Legs</li>
				<li>Arms</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/BionicSuit/Apparel</wornGraphicPath>
			<blocksAddedPartWoundGraphics>true</blocksAddedPartWoundGraphics>
			<layers>
				<li>OnSkin</li>
			</layers>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
			<canBeGeneratedToSatisfyToxicEnvironmentResistance>false</canBeGeneratedToSatisfyToxicEnvironmentResistance>
		</apparel>
	</ThingDef>

