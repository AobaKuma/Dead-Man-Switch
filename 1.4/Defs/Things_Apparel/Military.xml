<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="ApparelBase">
		<defName>DMS_Apparel_BionicSuit</defName>
		<label>bionic suit</label>
		<description>Physical enhancement equipment sewn from artificial muscle fibers. Can effectively increase the wearer's muscle strength and mobility.</description>
		<techLevel>Industrial</techLevel>
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<recipeUsers>
				<li>DMS_TableAtrifuscle</li>
			</recipeUsers>	
			<researchPrerequisite>DMS_Atrifuscle</researchPrerequisite>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
		</recipeMaker>
		<costList>
			<Plasfiber>40</Plasfiber>
			<Atrifuscle>80</Atrifuscle>
			<Chemfuel>20</Chemfuel>
		</costList>
		<tradeTags>
			<li>Clothing</li>
		</tradeTags>
		<graphicData>
			<texPath>Things/Apparel/BionicSuit/Apparel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<WorkToMake>8000</WorkToMake>
			<Mass>7</Mass>
			<ArmorRating_Sharp>0.4</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.4</ArmorRating_Blunt>
			<ArmorRating_Heat>0.6</ArmorRating_Heat>
			<Insulation_Cold>18</Insulation_Cold>
			<Insulation_Heat>18</Insulation_Heat>
			<EquipDelay>15</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>1.2</MoveSpeed>
			<ToxicEnvironmentResistance>0.25</ToxicEnvironmentResistance>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Torso</li>
				<li>Legs</li>
				<li>Arms</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/BionicSuit/Apparel</wornGraphicPath>
			<blocksAddedPartWoundGraphics>true</blocksAddedPartWoundGraphics>
			<layers>
				<li>OnSkin</li>
			</layers>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
			<canBeGeneratedToSatisfyToxicEnvironmentResistance>false</canBeGeneratedToSatisfyToxicEnvironmentResistance>
		</apparel>
	</ThingDef>

	<ThingDef ParentName="ApparelMakeableBase">
		<defName>DMS_Apparel_ArmyCap</defName>
		<label>army cap</label>
		<description>a soft cap for military man when combat helmet is not required.</description>
		<graphicData>
			<texPath>Things/Apparel/ArmyCap/headgear_icon</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>	
			<researchPrerequisite>DMS_EquipmentBasis</researchPrerequisite>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
		</recipeMaker>
		<costStuffCount>45</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<statBases>
			<StuffEffectMultiplierArmor>0.15</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.25</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
			<MaxHitPoints>50</MaxHitPoints>
			<WorkToMake>2500</WorkToMake>
			<Mass>0.05</Mass>
			<Insulation_Cold>7</Insulation_Cold>
			<Insulation_Heat>6</Insulation_Heat>
			<EquipDelay>1</EquipDelay>
		</statBases>
		<equippedStatOffsets>		
			<MentalBreakThreshold>-0.10</MentalBreakThreshold>
		</equippedStatOffsets>
		<apparel>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>DMS_Soldier</li>
				<li>ArmyCap</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<wornGraphicPath>Things/Apparel/ArmyCap/headgear</wornGraphicPath>
			<canBeDesiredForIdeo>true</canBeDesiredForIdeo>
		</apparel>
		<tradeTags>
			<li>Armor</li>
		</tradeTags>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<only>(0.33,0.33,0.33)</only>
				</li>
				<li>
					<only>(0.65,0.65,0.65)</only>
				</li>
				<li>
					<weight>0.5</weight>
					<min>(0.3,0.3,0.3)</min>
					<max>(0.5,0.5,0.5)</max>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>

	<ThingDef ParentName="ArmorHelmetMakeableBase">
		<defName>DMS_Apparel_TacticalHelmet</defName>
		<label>tactical helmet</label>
		<description>A lightweight combat helmet with a complex design, reinforced with plasteel. Not effective against blunt weapons.</description>
		<techLevel>Industrial</techLevel>
		<recipeMaker>
		  <researchPrerequisite>FlakArmor</researchPrerequisite>
		  <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
		  <skillRequirements>
			<Crafting>5</Crafting>
		  </skillRequirements>
		  <displayPriority>205</displayPriority>
		</recipeMaker>
		<graphicData>
		  <texPath>Things/Apparel/PASGT/Icon</texPath>
		  <graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<uiIconScale>1</uiIconScale>
		<statBases>
		  <WorkToMake>12000</WorkToMake>
		  <MaxHitPoints>150</MaxHitPoints>
		  <Mass>1.5</Mass>
		  <StuffEffectMultiplierArmor>0.8</StuffEffectMultiplierArmor>
		  <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
		  <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
		  <EquipDelay>1.75</EquipDelay>
		</statBases>
		<stuffCategories>
		  <li>Metallic</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<costList>
		  <ComponentStamped>1</ComponentStamped>
		  <Polyester>20</Polyester>
		</costList>
		<apparel>
		  <countsAsClothingForNudity>false</countsAsClothingForNudity>
		  <bodyPartGroups>
			<li>UpperHead</li>
		  </bodyPartGroups>
		  <wornGraphicPath>Things/Apparel/PASGT/Apparel</wornGraphicPath>
		  <layers>
			<li>Overhead</li>
		  </layers>
		  <tags>
			<li>DMS_Tactical</li>
			<li>IndustrialMilitaryAdvanced</li>
		  </tags>
		  <defaultOutfitTags>
			<li>Soldier</li>
		  </defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
		  <options>
			<li>
			  <weight>10</weight>
			  <only>(0.33,0.33,0.33,1)</only>
			</li>
			<li>
			  <weight>10</weight>
			  <only>(0.65,0.65,0.65,1)</only>
			</li>
			<li>
			  <weight>6</weight>
			  <min>(0.3,0.3,0.3,1)</min>
			  <max>(0.5,0.5,0.5,1)</max>
			</li>
			<li>
			  <weight>10</weight>
			  <only>(0.9,0.9,0.9,1)</only>
			</li>
		  </options>
		</colorGenerator>
		<tradeTags>
		  <li>Armor</li>
		</tradeTags>
	  </ThingDef>

	<ThingDef ParentName="ArmorMachineableBase">
		<defName>DMS_Apparel_TacticalVest</defName>
		<label>tactical vest</label>
		<description>A vest with armor plates inserted on the chest and back. While quite effective at deflecting gunshots and stabbing attacks against the chest, it does nothing to protect the limbs.</description>
		<techLevel>Industrial</techLevel>
		<recipeMaker>
			<researchPrerequisite>FlakArmor</researchPrerequisite>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
			<displayPriority>220</displayPriority>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Apparel/TacticalVest/Apparel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.75</drawSize>
		</graphicData>
		<statBases>
			<WorkToMake>9000</WorkToMake>
			<MaxHitPoints>200</MaxHitPoints>
			<Mass>4</Mass>
			<Flammability>0.3</Flammability>
			<StuffEffectMultiplierArmor>0.85</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>5</EquipDelay>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
		  </stuffCategories>
		<costStuffCount>60</costStuffCount>
		<costList>
			<ComponentStamped>1</ComponentStamped>
			<Polyester>30</Polyester>
		  </costList>
		<equippedStatOffsets>
			<MoveSpeed>-0.15</MoveSpeed>
		</equippedStatOffsets>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>

		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/TacticalVest/Apparel</wornGraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>DMS_Tactical</li>
				<li>IndustrialMilitaryBasic</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<only>(0.33,0.33,0.33)</only>
				</li>
				<li>
					<only>(0.65,0.65,0.65)</only>
				</li>
				<li>
					<weight>0.5</weight>
					<min>(0.3,0.3,0.3)</min>
					<max>(0.5,0.5,0.5)</max>
				</li>
			</options>
		</colorGenerator>
		<tradeTags>
			<li>Armor</li>
		</tradeTags>
	</ThingDef>
	
</Defs>