<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- T2 DMS_Automatroid-->
  <!-- 雙足飛龍 Reptile-->
  <ThingDef ParentName="BaseAutomatroidRace">
    <defName>DMS_Mech_Reptile</defName>
    <label>reptile</label>
    <description>the moderize-redesigned bipedal walking tank based on the Tarbosaurus, having a rather smaller size and cost-friendly for mass production. but the experimental electromagnetic armor been removed to maintain it's mobility.</description>
    <statBases>
      <MoveSpeed>3.5</MoveSpeed>                                                    <!--移動速度-->
      <ArmorRating_Blunt>1.2</ArmorRating_Blunt>                                     <!--護甲-->
      <ArmorRating_Sharp>0.8</ArmorRating_Sharp>
      <ArmorRating_Heat>1.8</ArmorRating_Heat>
      <BandwidthCost MayRequire="Ludeon.Rimworld.Biotech">4</BandwidthCost>        <!--帶寬消耗-->
      <WastepacksPerRecharge MayRequire="Ludeon.Rimworld.Biotech">4</WastepacksPerRecharge><!--充電/培養時產出廢料-->
    </statBases>
    <race>
      <body>DMS_Bipedal</body>                                                      <!--身體(另外的def)-->
      <nameGenerator>DMS_VanguardMechHeavy</nameGenerator>
      <baseBodySize>2.25</baseBodySize>
      <baseHealthScale>2.5</baseHealthScale>
      <mechWeightClass>Heavy</mechWeightClass>
    </race>
    <comps>  
		  <li Class="DMS.CompProperties_VehicleWeapon">
			  <defaultWeapon>DMS_HeavyMachineGunMounted</defaultWeapon>			  
        <drawSize>3</drawSize>
			  <drawOffset>(0.25,0,1)</drawOffset>
			  <turretRotationFollowPawn>true</turretRotationFollowPawn>
        <horizontalFlip>true</horizontalFlip>	  
        <rotationSmoothTime>0.1</rotationSmoothTime>
      </li>
    </comps>
    <!--need new melee tools based on their legs, not arms(those "arms" are supporting mechnical arms)-->
    <tools Inherit="False">
      <li>
        <label>Mechanical Head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>32</power>
        <cooldownTime>5.5</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.08</chanceFactor>
		    <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>Left Leg</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>21</power>
        <cooldownTime>3.5</cooldownTime>
        <linkedBodyPartsGroup>LeftMechanicalLeg</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
		    <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>16</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>Right Leg</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>21</power>
        <cooldownTime>3.5</cooldownTime>
        <linkedBodyPartsGroup>RightMechanicalLeg</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
		    <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>16</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </tools>
  </ThingDef>

  <PawnKindDef ParentName="BaseAutomatroidKind">
    <defName>DMS_Mech_Reptile</defName>
    <label>reptile</label>
    <race>DMS_Mech_Reptile</race>
    <isFighter>true</isFighter>
    <combatPower>250</combatPower>                                               <!--威脅點數-->
    <maxPerGroup>7</maxPerGroup>                                                 <!--單個集群內的數量-->
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Automatroid/Reptile</texPath>
          <shaderType>CutoutComplex</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>2.5</drawSize>
        </bodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Automatroid/Reptile</texPath>
          <shaderType>CutoutComplex</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>2.5</drawSize>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponTags>
      <li>V_HMG</li>                                                                     <!--武器-->
      <li>V_Gatling556mm</li>
    </weaponTags>
  </PawnKindDef>

