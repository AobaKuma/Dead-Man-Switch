          <drawSize>1.1</drawSize>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponTags>
      <li>DMS_MechWeaponLight</li>                                                                     <!--武器-->
    </weaponTags>
  </PawnKindDef>

</Defs>