<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- 士兵型 -->
  <ThingDef Name="BaseMechRace_Soldat" ParentName="BaseAutomatroidHumanRace" Abstract="True">
    <statBases>
      <MoveSpeed>4.2</MoveSpeed>
      <ArmorRating_Sharp>0.2</ArmorRating_Sharp><!--銳抗-->
      <ArmorRating_Blunt>0.2</ArmorRating_Blunt><!--鈍抗-->
      <ArmorRating_Heat>1.5</ArmorRating_Heat>  <!--能抗-->
      <BandwidthCost MayRequire="Ludeon.Rimworld.Biotech">2</BandwidthCost>
      <WastepacksPerRecharge MayRequire="Ludeon.Rimworld.Biotech">2</WastepacksPerRecharge>
    </statBases>
    <race>
      <body>DMS_Humanoid_Soldat</body>
      <baseBodySize>1</baseBodySize>
      <baseHealthScale>1</baseHealthScale>
      <mechWeightClass>Medium</mechWeightClass>
    </race>
  </ThingDef>

  <!-- DMS_Mech_Soldat 士兵常規型 -->
  <ThingDef ParentName="BaseMechRace_Soldat">
    <defName>DMS_Mech_Soldat</defName>
    <label>soldat</label>
    <description>A biped humanoid robot imitated design from the combat unit of mechanoids, can equipped with weapons that humans can use. \n\n Although the carried battery backpack having a long battery life, but is also makes it unable to fight like a genuine mech walkers without cover.</description>
    <statBases>
      <BandwidthCost MayRequire="Ludeon.Rimworld.Biotech">1</BandwidthCost> 
    </statBases>
    <modExtensions>
      <li Class="DMS.MechWeaponExtension">
        <EnableWeaponFilter>true</EnableWeaponFilter>
        <UsableWeaponTags>
          <li>SimpleGun</li>
          <li>ShortShots</li>
          <li>PLA_SimpleGun</li>
          <li>PLA_SemiAutoRifle</li>
          <li>CE_SMG</li>
          <li>PLA_Shotgun</li>
          <li>PLA_SMG</li>
          <li>PLA_Pistol</li>
          <li>DMS_MechWeaponLight</li>
          <li>IndustrialGun</li>
        </UsableWeaponTags>
        <EnableTechLevelFilter>true</EnableTechLevelFilter>
        <UsableTechLevels>
          <li>Industrial</li>
        </UsableTechLevels>
        <BypassUsableWeapons>
          <li>FT_GPMG_Minified</li>
        </BypassUsableWeapons>
      </li>
    </modExtensions>
  </ThingDef>
  <PawnKindDef ParentName="BaseAutomatroidKind">
    <defName>DMS_Mech_Soldat</defName>
    <label>soldat</label>
    <race>DMS_Mech_Soldat</race>
    <isFighter>true</isFighter>
    <combatPower>40</combatPower>                                               <!--威脅點數-->
    <maxPerGroup>20</maxPerGroup>                                                 <!--單個集群內的數量-->
    <lifeStages>                                                                 <!--身體圖片-->
      <li>
        <bodyGraphicData>
          <texPath>Things/Automatroid/soldat</texPath>
          <shaderType>CutoutComplex</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.1</drawSize>
        </bodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Automatroid/OldTexture/soldat</texPath>
          <shaderType>CutoutComplex</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.1</drawSize>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponTags><!--武器-->
      <li>SimpleGun</li>
      <li>ShortShots</li>
      <li>SurvivalRifle</li>
    </weaponTags>
  </PawnKindDef>


  <PawnKindDef ParentName="BaseAutomatroidKind"><!--海盜特供型-->
    <defName>DMS_Mech_Raider</defName>
    <label>raider</label>
    <race>DMS_Mech_Soldat</race>
    <isFighter>true</isFighter>
    <combatPower>80</combatPower>                                               
    <maxPerGroup>20</maxPerGroup>
    <canBeSapper>false</canBeSapper>
    <aiAvoidCover>true</aiAvoidCover>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Automatroid/Pirate/soldat</texPath>
          <shaderType>CutoutComplex</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.1</drawSize>
        </bodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Automatroid/Pirate/soldat</texPath>
          <shaderType>CutoutComplex</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.1</drawSize>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponTags><!--武器-->
      <li>SimpleGun</li>
      <li>ShortShots</li>
      <li>WarcasketBasic</li>
    </weaponTags>
  </PawnKindDef>

