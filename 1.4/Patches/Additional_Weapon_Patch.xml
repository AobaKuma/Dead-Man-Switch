<?xml version="1.0" encoding="utf-8"?>
<Patch>
    
    <!--give grenades to birdy-->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[@Name="BaseMakeableGrenade"]</xpath>
            <value>
                <weaponTags>
                    <li>VerlingBird_Weapon</li>
                </weaponTags>
            </value>
    </Operation>

    <!--vanilla blunt weapon tag for RC units-->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="MeleeWeapon_Mace"]/weaponTags</xpath>
            <value>
                <li>DMS_RC_Melee</li>
            </value>
    </Operation>

    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Weapons Expanded - Heavy Weapons</li>
		</mods>
		<match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[
                    defName="VWE_Gun_Autocannon" or 
                    defName="VWE_Gun_HandheldMortar" or 
                    defName="VWE_Gun_HeavyFlamer" or 
                    defName="VWE_Gun_SwarmMissileLauncher" or 
                    defName="VWE_Gun_UraniumSlugRifle"
                    ]/modExtensions/li[@Class="HeavyWeapons.HeavyWeapon"]/supportedArmors</xpath>
				<value>
					<li>DMS_Apparel_PowerSkelton</li>
				</value>
			</li>
		</operations>
        </match>
    </Operation>
</Patch>