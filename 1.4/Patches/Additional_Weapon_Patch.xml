<?xml version="1.0" encoding="utf-8"?>
<Patch>
    
    <!--give grenades to birdy-->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[@Name="BaseMakeableGrenade"]</xpath>
            <value>
                <weaponTags>
                    <li>VerlingBird_Weapon</li>
                </weaponTags>
            </value>
    </Operation>

    <!--bolt-action doesn't even own a f@cking tag-->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Gun_BoltActionRifle"]</xpath>
            <value>
                <weaponTags>
                    <li>Simple_LongRange</li>
                </weaponTags>
            </value>
    </Operation>

    <!--vanilla blunt weapon tag for RC units-->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="MeleeWeapon_Mace"]</xpath>
            <value>
                <weaponTags>
                    <li>DMS_RC_Melee</li>
                </weaponTags>
            </value>
    </Operation>


</Patch>