					<WornBulk>1</WornBulk>
				</value>
			</li>
			<!--PASGT Array-->
			<li Class="PatchOperationReplace">
				<xpath>
					Defs/ThingDef[defName="DMS_Apparel_ArrayHelmet"]/statBases/StuffEffectMultiplierArmor</xpath>
