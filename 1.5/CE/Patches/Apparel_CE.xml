				<value>
					<CarryWeight>50</CarryWeight>
				</value>
			</li>

			<!--Bionic suit-->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="DMS_Apparel_BionicSuit"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>4</ArmorRating_Sharp>
