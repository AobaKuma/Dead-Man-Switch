					<li>Feet</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="DMS_Apparel_HazardSuit"]/apparel/layers</xpath>
				<value>
					<li>StrappedHead</li>
				</value>
			</li>
