									<li>Neck</li>
									<li>Shoulder</li>
								</parts>
							</li>
						</stats>
					</li>
				</value>
			</li>


			<!--unit suit-->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="DMS_Apparel_UnitSuit"]/statBases/StuffEffectMultiplierArmor</xpath>
