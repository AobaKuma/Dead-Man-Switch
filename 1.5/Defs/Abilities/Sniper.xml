<?xml version="1.0" encoding="utf-8"?>
<Defs>

 <!-- 大幅增加自身的射擊準度 -->
	<AbilityDef ParentName="DMS_AddHediffSelfBase">
		<defName>DMS_SharpShooting</defName>
		<label>precise sniping</label>
		<description>uses built-in ballistic computer to measure extremely detailed shooting data to highly improve shooting accuracy in short time.</description>
		<iconPath>UI/Ability/PiercingSnipe</iconPath>
		<aiCanUse>true</aiCanUse>
		<comps>
		<li Class="CompProperties_AbilityGiveHediff">
			<compClass>CompAbilityEffect_GiveHediff</compClass>
			<hediffDef>DMS_SharpShooting</hediffDef>
			<onlyBrain>True</onlyBrain>
			<onlyApplyToSelf>True</onlyApplyToSelf>
			<replaceExisting>true</replaceExisting>
		</li>
		</comps>
		<statBases>
			<Ability_Duration>10</Ability_Duration>
		</statBases>
	</AbilityDef>

	<HediffDef>
		<defName>DMS_SharpShooting</defName>
		<label>precise sniping mode</label>
		<defaultLabelColor>(0.52, 1, 0.95)</defaultLabelColor>
		<description>this unit is at an absolute standstill and uses its built-in ballistic computer to measure extremely detailed shooting data, allowing it to accurately hit the intended target.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<comps>
		  <li Class="HediffCompProperties_DisappearsOnDeath"/>
		  <li Class="HediffCompProperties_Disappears">
			<showRemainingTime>True</showRemainingTime>
		  </li>
		</comps>
		<isBad>false</isBad>
		<stages>
			<li>
				<statOffsets>
					<ShootingAccuracyPawn>1</ShootingAccuracyPawn>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.8</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

 <!-- 增加範圍內友軍的射擊準度 -->

	<AbilityDef ParentName="DMS_AddHediffSelfBase">
		<defName>DMS_RangeFinder</defName>
		<label>recon calibration</label>
		<description>Share fire control data to friendly forces within range to improve squad shooting accuracy in short time.</description>
		<iconPath>UI/Ability/RangeFinder</iconPath>
		<comps>
		<li Class="CompProperties_AbilityGiveHediff">
			<compClass>CompAbilityEffect_GiveHediff</compClass>
			<hediffDef>DMS_RangeFinder</hediffDef>
			<onlyBrain>True</onlyBrain>
			<onlyApplyToSelf>True</onlyApplyToSelf>
			<replaceExisting>true</replaceExisting>
		</li>
		</comps>
		<statBases>
			<Ability_EffectRadius>3.9</Ability_EffectRadius>
			<Ability_Duration>60</Ability_Duration>
		</statBases>
		<verbProperties>
			<range>3.9</range>
		</verbProperties>
	</AbilityDef>
  
 <HediffDef>
	<defName>DMS_RangeFinder</defName>
	<label>recon calibration</label>
	<description>A large amount of fire control data is being shared with surrounding friendly forces through this unit, which will temporarily slow down the OS response speed.</description>
	<hediffClass>HediffWithComps</hediffClass>
	<defaultLabelColor>(0.52, 1, 0.95)</defaultLabelColor>
	<comps>
	  <li Class="HediffCompProperties_Disappears">
		<showRemainingTime>True</showRemainingTime>
	  </li>
	  <li Class="HediffCompProperties_DisappearsOnDeath"/>
	  <li Class="HediffCompProperties_GiveHediffsInRange">
		<compClass>DMS.HediffComp_GiveHediffsInRangeMech</compClass>
		<range>3.9</range>
		<hideMoteWhenNotDrafted>true</hideMoteWhenNotDrafted>
		<onlyPawnsInSameFaction>true</onlyPawnsInSameFaction>
		<targetingParameters>
			<canTargetSelf>false</canTargetSelf>
			<canTargetPawns>true</canTargetPawns>
			<canTargetAnimals>false</canTargetAnimals>
			<canTargetHumans>true</canTargetHumans>
			<canTargetMechs>true</canTargetMechs>
		</targetingParameters>
		<hediff>DMS_RangeFinderBuff</hediff>
	  </li>
	</comps>
	<isBad>false</isBad>
	<stages>
		<li>
			<statOffsets>
			  	<ShootingAccuracyPawn>-1</ShootingAccuracyPawn>
			</statOffsets>
			<capMods>
				<li>
					  <capacity>Consciousness</capacity>
					  <offset>-0.4</offset>
				</li>
			</capMods>
		</li>
	</stages>
  </HediffDef>

<!-- 施加在友軍上的Buff -->
  <HediffDef>
	<defName>DMS_RangeFinderBuff</defName>
	<label>received calibration</label>
	<description>The missile knows where it is at all times. It knows this because it knows where it isn't. By subtracting where it is from where it isn't, or where it isn't from where it is...</description>
	<hediffClass>HediffWithComps</hediffClass>    
	<defaultLabelColor>(0.52, 1, 0.95)</defaultLabelColor>
	<comps>
	  <li Class="HediffCompProperties_Disappears">
		<showRemainingTime>false</showRemainingTime>
	  </li>
	  <li Class="HediffCompProperties_DisappearsOnDeath"/>
	</comps>
	<isBad>false</isBad>
	<stages>
	  <li>
		<statOffsets>
		  <ShootingAccuracyPawn>0.25</ShootingAccuracyPawn>
		</statOffsets>
	  </li>
	</stages>
  </HediffDef>
</Defs>