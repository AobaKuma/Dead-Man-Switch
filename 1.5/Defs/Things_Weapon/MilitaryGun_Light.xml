<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- DMS_TaticalPistol -->
	<ThingDef ParentName="DMS_BaseMakeableGun">
		<defName>DMS_TaticalPistol</defName>
		<label>mech pistol</label>
		<description>Defensive firearm with refined manufacture process and additional tactical attachments, it's too heavy for human but suitable to mech soldier. offers better stop power than comparable weapons.\n\nThis weapon is designed specially for automatroid use, thus normal human may be unable to use them normally without external assistance equipment or being extra strong.</description>
		<weaponClasses>
			<li>RangedLight</li>
			<li>ShortShots</li>
			<li>Ranged</li>
		</weaponClasses>
		<weaponTags>
			<li>DMS_MechWeaponLight</li>
			<li>A_Pistol</li>
		</weaponTags>
		<uiIconScale>1.8</uiIconScale>
		<graphicData>
			<texPath>Things/Weapons/DMS_TaticalPistol</texPath>
			<drawSize>(0.8,0.8)</drawSize>
		</graphicData>
		<statBases>
			<Mass>2.5</Mass>
			<AccuracyTouch>0.8</AccuracyTouch>
			<AccuracyShort>0.75</AccuracyShort>
			<AccuracyMedium>0.45</AccuracyMedium>
			<AccuracyLong>0.4</AccuracyLong>
			<WorkToMake>18000</WorkToMake>
			<RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
		</statBases>
		<recipeMaker>
			<researchPrerequisites>
				<li>BlowbackOperation</li>
				<li>DMS_EquipmentAdvanced</li>
			</researchPrerequisites>
		</recipeMaker>
		<costList>
			<Tungsteel>30</Tungsteel>
			<ComponentStamped>1</ComponentStamped>
		</costList>
		<tools Inherit="False">
			<li>
				<label>grip</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>DMS_Bullet_Pistol</defaultProjectile>
				<warmupTime>0.3</warmupTime>
				<range>25.9</range>
				<soundCast>DMS_Pistol_Shot</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<modExtensions>
			<li Class="MuzzleFlash.MuzzleFlashProps" MayRequire="IssacZhuang.MuzzleFlash">
				<def>MF_StandardMuzzleFalsh</def>
				<drawSize>(0.5,0.5)</drawSize>
				<offsets>
					<li>(0.25,0)</li>
				</offsets>
				<isAlternately>true</isAlternately>
			</li>
			<li Class="DMS.HeavyEquippableExtension">
				<EquippableDef>AverageHumanCanUse</EquippableDef>
			</li>
		</modExtensions>
	</ThingDef>

	<ThingDef ParentName="BaseBullet">
		<defName>DMS_Bullet_Pistol</defName>
		<label>tactical autopistol bullet</label>
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>15</damageAmountBase>
			<speed>60</speed>
			<stoppingPower>7</stoppingPower>
			<armorPenetrationBase>0.14</armorPenetrationBase>
		</projectile>
	</ThingDef>

	<!--DMS_PDW .50AE衝鋒槍.-->
	<ThingDef ParentName="DMS_BaseMakeableGun">
		<defName>DMS_PDW</defName>
		<label>PDW</label>
		<description>A mass-produced submachine gun, which was designed only capable of hip-fire so it's inaccurate in range but its caliber and ability to draw quick make it the perfect weapon for urban combat against milltor.</description>
		<weaponClasses>
			<li>RangedLight</li>
			<li>ShortShots</li>
			<li>Ranged</li>
		</weaponClasses>
		<weaponTags>
			<li>DMS_IndustrialGun</li>
			<li>DMS_MechWeaponLight</li>
			<li>A_Pistol</li>
			<li>A_PDW</li>
		</weaponTags>

		<graphicData>
			<texPath>Things/Weapons/DMS_PDW</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1.3,1.3)</drawSize>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<statBases>
			<WorkToMake>26000</WorkToMake>
			<Mass>4.0</Mass>
			<AccuracyTouch>0.65</AccuracyTouch>
			<AccuracyShort>0.35</AccuracyShort>
			<AccuracyMedium>0.25</AccuracyMedium>
			<AccuracyLong>0.15</AccuracyLong>
			<RangedWeapon_Cooldown>1.15</RangedWeapon_Cooldown>
		</statBases>
		<recipeMaker>
			<researchPrerequisites>
				<li>BlowbackOperation</li>
				<li>DMS_EquipmentElite</li>
			</researchPrerequisites>
		</recipeMaker>
		<costList>			
			<Tungsteel>55</Tungsteel>
			<ComponentStamped>2</ComponentStamped>
		</costList>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>DMS_Bullet_Pistol</defaultProjectile>
				<warmupTime>0.55</warmupTime>
				<range>13.9</range>
				<ticksBetweenBurstShots>3</ticksBetweenBurstShots>
				<burstShotCount>6</burstShotCount>
				<soundCast>Shot_Minigun</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<modExtensions>
			<li Class="MuzzleFlash.MuzzleFlashProps" MayRequire="IssacZhuang.MuzzleFlash">
				<def>MF_StandardMuzzleFalsh</def>
				<drawSize>(0.5,0.5)</drawSize>
				<offsets>
					<li>(0.25,0)</li>
				</offsets>
				<isAlternately>true</isAlternately>
			</li>
			<li Class="DMS.HeavyEquippableExtension">
				<EquippableDef>AverageHumanCanUse</EquippableDef>
			</li>
		</modExtensions>
	</ThingDef>

	<!--DMS_AssaultPiercer 突擊衝鋒槍-->
	<ThingDef ParentName="DMS_AutomatroidGun">
		<defName>DMS_AssaultPiercer</defName>
		<label>assault piercer</label>
		<description>a submachine gun chambered in the high-caliber round, capable of quick draw penetrating most of the armored targets in short range. Refered as piercer due to lack of comparable weapon in human arsenal.\n\nThis weapon is designed specially for automatroid use, thus normal human may be unable to use them normally without external assistance equipment or being extra strong.</description>
		<weaponClasses>
			<li>RangedLight</li>
			<li>ShortShots</li>
			<li>Ranged</li>
		</weaponClasses>		
		<weaponTags>
			<li>DMS_MechWeaponMeduim</li>
			<li>A_AP</li>
		</weaponTags>
		<graphicData>
			<texPath>Things/Weapons/DMS_AssaultPiercer</texPath>
			<drawSize>(1.5,1.5)</drawSize>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<statBases>
			<Mass>6.56</Mass>
			<RangedWeapon_Cooldown>0.96</RangedWeapon_Cooldown>
			<AccuracyTouch>0.5</AccuracyTouch>
			<AccuracyShort>0.35</AccuracyShort>
			<AccuracyMedium>0.15</AccuracyMedium>
			<AccuracyLong>0.05</AccuracyLong>
			<WorkToMake>45000</WorkToMake>
		</statBases>
		<recipeMaker>
			<researchPrerequisites>
				<li>PrecisionRifling</li>
				<li>DMS_EquipmentElite</li>
			</researchPrerequisites>
		</recipeMaker>
		<costList>			
			<Tungsteel>75</Tungsteel>
			<ComponentStamped>3</ComponentStamped>
		</costList>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_DMS_LightMachineGun</defaultProjectile>
				<warmupTime>0.5</warmupTime>
				<range>13.9</range>
				<burstShotCount>3</burstShotCount>
				<ticksBetweenBurstShots>8</ticksBetweenBurstShots>
				<soundCast>DMS_MachineGunLight_Shot</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<modExtensions>
			<li Class="MuzzleFlash.MuzzleFlashProps" MayRequire="IssacZhuang.MuzzleFlash">
				<def>MF_StandardMuzzleFalsh</def>
				<drawSize>(1.25,1.25)</drawSize>
				<offsets>
					<li>(0.25,0)</li>
				</offsets>
				<isAlternately>true</isAlternately>
			</li>
			<li Class="DMS.HeavyEquippableExtension">
				<EquippableDef>StandardAutomatroid</EquippableDef>
			</li>
		</modExtensions>
	</ThingDef>
	<!--DMS_Flameblaster 火焰發射器.-->
	<ThingDef ParentName="DMS_BaseMakeableGun">
		<defName>DMS_Flameblaster</defName>
		<label>flameblaster</label>
		<description>A flame launcher used by mechs that can effectively ignite flammable materials within a range</description>
		<graphicData>
		  <texPath>Things/Weapons/DMS_Flameblaster</texPath>
		  <graphicClass>Graphic_Single</graphicClass>
		  <drawSize>1.4</drawSize>
		</graphicData>
		<costList>
			<Chemfuel>75</Chemfuel>
			<Tungsteel>10</Tungsteel>
			<ComponentStamped>1</ComponentStamped>
		</costList>
		<statBases>
		  <MarketValue>1000</MarketValue>
		  <Mass>1.5</Mass>
		  <AccuracyTouch>0.40</AccuracyTouch>
		  <AccuracyShort>0.48</AccuracyShort>
		  <AccuracyMedium>0.35</AccuracyMedium>
		  <AccuracyLong>0.26</AccuracyLong>
		  <RangedWeapon_Cooldown>4.0</RangedWeapon_Cooldown>      
		</statBases>
		<tradeability>None</tradeability>
		<destroyOnDrop>false</destroyOnDrop>
		<relicChance>0</relicChance>
		<equippedDistanceOffset>-0.14</equippedDistanceOffset>
		<tools>
		  <li>
			<label>barrel</label>
			<capacities>
			  <li>Blunt</li>
			  <li>Poke</li>
			</capacities>
			<power>9</power>
			<cooldownTime>3.5</cooldownTime>
		  </li>
		</tools>
		<weaponTags>
		  <li>DMS_Flameblaster</li>
		</weaponTags>
		<verbs>
		  <li>
			<verbClass>Verb_SpewFire</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<warmupTime>0.5</warmupTime>
			<range>7.9</range>
			<ticksBetweenBurstShots>5</ticksBetweenBurstShots>
			<burstShotCount>10</burstShotCount>
			<soundCast>Shot_MiniFlameblaster</soundCast>
			<muzzleFlashScale>9</muzzleFlashScale>
		  </li>
		</verbs>
		<comps>
		</comps>
		<modExtensions>
			<li Class="DMS.HeavyEquippableExtension">
				<EquippableDef>MountedWeapon</EquippableDef>
			</li>
		</modExtensions>
	</ThingDef>
</Defs>