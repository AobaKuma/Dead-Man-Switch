<?xml version="1.0" encoding="utf-8"?>
<Defs>
    
  <!-- lady -->
  <ThingDef ParentName="BaseAutomatroidHumanRace">
    <defName>DMS_Mech_Lady</defName>
    <label>lady</label>
    <description>The MG-1 Lady is a mech that makes heavy use of synthetic mechanical technology. It was originally designed to reduce the cognitive bias syndrome caused by long-term cooperation with machines in the military. Therefore, most of its anatomical structures are similar to humans, and its internal organs can almost be directly transplanted into the human body. However, due to its overly human-like appearance, it is only limitedly equipped for sniper troops and officers as sniper observers or bodyguards.</description>
    <thingClass>DMS.HumanlikeMech</thingClass>
    <uiIconPath>Things/Automatroid/Icon_Lady</uiIconPath>
    <statBases>
      <MarketValue>2000</MarketValue>
      <MoveSpeed>5</MoveSpeed>
      <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.2</ArmorRating_Sharp>
      <EMPResistance MayRequire="Ludeon.Rimworld.Biotech">3</EMPResistance>                                             <!--EMP抵抗力-->
      <BandwidthCost MayRequire="Ludeon.Rimworld.Biotech">3</BandwidthCost>
      <ControlTakingTime MayRequire="Ludeon.Rimworld.Biotech">30</ControlTakingTime>
    </statBases>
    <inspectorTabs Inherit="False">
      <li>ITab_Pawn_Health</li>
      <li>ITab_Pawn_Needs</li>
      <li>ITab_Pawn_FormingCaravan</li>
      <li>ITab_Pawn_Gear</li>
      <li>ITab_Pawn_Log</li>
    </inspectorTabs>
    <tools>
      <li>
        <label>left fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8.2</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8.2</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </tools>
    <race>
      <renderTree>HumanlikeMech</renderTree>
      <thinkTreeMain>DMS_HumanlikeMech</thinkTreeMain>
      <makesFootprints>true</makesFootprints>
      <body>DMS_Synthroid</body>
      <mechEnabledWorkTypes>
        <li>Hauling</li>
        <li>Construction</li>
        <li>PlantCutting</li>
        <li>Growing</li>
        <li>Cleaning</li>
        <li>Firefighter</li>
        <li>Doctor</li>
      </mechEnabledWorkTypes>
      <lifeStageAges Inherit="False">
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Mech_Legionary_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Legionary_Death</soundDeath>
          <soundCall>Pawn_Mech_Legionary_Call</soundCall>
        </li>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>100</minAge>
          <soundWounded>Pawn_Mech_Legionary_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Legionary_Death</soundDeath>
          <soundCall>Pawn_Mech_Legionary_Call</soundCall>
        </li>
      </lifeStageAges>
    </race>
    <comps>
      <li Class="DMS.CompProperties_MechApparel">
      </li>
    </comps>
    <modExtensions>
      <li Class="DMS.TurretMannableExtension"/>
      <li Class="DMS.HumanlikeMechExtension">
        <bodyTypeOverride>Female</bodyTypeOverride>
        <headTypeOverride>Female_AveragePointy</headTypeOverride>
        <headGraphic>
          <texPath>Things/Automatroid/seperated/ladyHead</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.4</drawSize>
        </headGraphic>
        <headOffset>(0,0,-0.05)</headOffset>
      </li>
      <li Class="DMS.MechWeaponExtension">
        <EnableWeaponFilter>true</EnableWeaponFilter>
        <UsableWeaponTags>
          <li>Gun</li>
          <li>DMS_MechWeaponLight</li>
          <li>A_AR_LongRifle</li>
          <li>A_SAR_LongRifle</li>
		      <li>A_BR_LongRifle</li>
          <li>A_MG_Light</li>
          <li>A_SR_GrenadeLauncher</li>
          <li>PLA_GrenadeLauncher</li>
          <li>PLA_AMR</li>
          <li>A_MG_Heavy</li>
          <li>ElephantGun</li>
          <li>SniperRifle</li>
          <li>AssaultRifle</li>
          <li>PLA_AssaultRifle</li>
          <li>PLA_Sniper</li>
          <li>PLA_DMR</li>
          <li>PLA_Pistol</li>
          <li>PLA_LMG</li>
        </UsableWeaponTags>
        <EnableTechLevelFilter>true</EnableTechLevelFilter>
        <UsableTechLevels>
          <li>Industrial</li>
          <li>Spacer</li>
        </UsableTechLevels>
      </li>
    </modExtensions>
  </ThingDef>

  <PawnKindDef ParentName="BaseAutomatroidKind">
    <defName>DMS_Mech_Lady</defName>
    <label>lady</label>
    <race>DMS_Mech_Lady</race>
    <combatPower>150</combatPower>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Automatroid/seperated/Synthroid_Female</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.4</drawSize>
          <shadowData>
            <volume>(0.6, 0.8, 0.6)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Automatroid/seperated/Synthroid_Female</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.4</drawSize>
          <shadowData>
            <volume>(0.6, 0.8, 0.6)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponMoney>9999~9999</weaponMoney>
    <weaponTags>
      <li>A_SR_LongRifle</li>
    </weaponTags>
    <techHediffsChance>1</techHediffsChance>
    <techHediffsMoney>9999~9999</techHediffsMoney>
    <controlGroupPortraitZoom>1.2</controlGroupPortraitZoom>
  </PawnKindDef>

  <RecipeDef ParentName="DMS_HumanoidMechanoidRecipe" Abstract="true">
    <defName>DMS_Make_Lady</defName>
    <label>gestate lady</label>
    <description>Gestate a lady mechanoid.</description>
    <products>
      <DMS_Mech_Lady>1</DMS_Mech_Lady>
    </products>
    <researchPrerequisite>DMS_Hybird</researchPrerequisite>
    <gestationCycles>1</gestationCycles>
    <descriptionHyperlinks>
      <ThingDef>DMS_Mech_Lady</ThingDef>
    </descriptionHyperlinks>
    <ingredients Inherit="False"> 
      <li>
        <filter>
          <thingDefs>
            <li>Artifuscle</li>
          </thingDefs>
        </filter>
        <count>80</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentSpacer</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Neurocomputer</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
  </RecipeDef>
</Defs>