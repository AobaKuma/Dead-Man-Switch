<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- 猿人 ape-->
  <ThingDef ParentName="BaseAutomatroidRace">
    <defName>DMS_Mech_Ape</defName>
    <label>ape</label>
    <description>An prototype design on testing the feasibility of humanoid automatroid, it's designed to equip with heavy weapon.</description>
    <statBases>
      <MoveSpeed>3</MoveSpeed>                                                              <!--移動速度-->
      <ArmorRating_Blunt>0.3</ArmorRating_Blunt>                                            <!--護甲-->
      <ArmorRating_Sharp>0.3</ArmorRating_Sharp>
      <ArmorRating_Heat>1.2</ArmorRating_Heat>
      <BandwidthCost MayRequire="Ludeon.Rimworld.Biotech">3</BandwidthCost>                 <!--帶寬消耗-->
      <WastepacksPerRecharge MayRequire="Ludeon.Rimworld.Biotech">5</WastepacksPerRecharge> <!--充電/培養時產出廢料-->
      <ShootingAccuracyPawn>0.8</ShootingAccuracyPawn>                                      <!---->
      <AimingDelayFactor>1.2</AimingDelayFactor>                                            <!--瞄準延遲-->
    </statBases>
    <race>
      <body>DMS_Humanoid_TypeB</body>                                                       <!--身體(另外的def)-->
      <nameGenerator>DMS_VanguardMechHeavy</nameGenerator>
      <baseBodySize>1.75</baseBodySize>
      <baseHealthScale>1.5</baseHealthScale>
      <mechWeightClass>Heavy</mechWeightClass>
    </race>
    <modExtensions>
      <li Class="DMS.MechWeaponExtension">
        <EnableWeaponFilter>true</EnableWeaponFilter>
        <UsableWeaponTags>
          <li>HeavyGun</li><!--重型武器拓展-->
          <li>WarcasketBasic</li><!--戰棺海盜拓展-->
          <li>DMS_MechWeaponLight</li>
          <li>DMS_MechWeaponMeduim</li>
          <li>A_SuppressWeapon</li>
          <li>DMS_MechWeaponHeavy</li>
          <li>PLA_AssaultRifle</li>
          <li>PLA_Shotgun</li>
          <li>PLA_SMG</li>
          <li>PLA_Pistol</li>
          <li>PLA_HMG</li>
        </UsableWeaponTags>
        <EnableTechLevelFilter>true</EnableTechLevelFilter>
        <UsableTechLevels>
          <li>Industrial</li>
        </UsableTechLevels>
      </li>
    </modExtensions>
  </ThingDef>

  <PawnKindDef ParentName="BaseAutomatroidKind">
    <defName>DMS_Mech_Ape</defName>
    <label>ape</label>
    <race>DMS_Mech_Ape</race>
    <isFighter>true</isFighter>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Automatroid/ape</texPath>
          <shaderType>CutoutComplex</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.5</drawSize>
        </bodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Automatroid/OldTexture/ape</texPath>
          <shaderType>CutoutComplex</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.5</drawSize>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponTags>
      <li>DMS_MechWeaponHeavy</li>
    </weaponTags>
  </PawnKindDef>

  <!-- 寄居蟹 -->
  <ThingDef ParentName="BaseAutomatroidRace">
    <defName>DMS_Mech_HermitCrab</defName>
    <label>hermit crab</label>
    <description>These large, expensive, heavy mobile industrial machines are designed and manufactured by worlds that intend to colonize space. Their large and expensive magnetic stabilizer shells integrate many complex-axis CNC tools and precision machinery. its high precision allows it to perform surgical procedures, but only if the patient overcomes their fear of a machine weighing several tons acting as their surgeon.</description>
    <statBases>
      <MoveSpeed>2.5</MoveSpeed>
      <ArmorRating_Sharp>1.0</ArmorRating_Sharp><!--銳抗-->
      <ArmorRating_Blunt>1.3</ArmorRating_Blunt><!--鈍抗-->
      <ArmorRating_Heat>1.2</ArmorRating_Heat>  <!--能抗-->
      <BandwidthCost MayRequire="Ludeon.Rimworld.Biotech">5</BandwidthCost>
      <WastepacksPerRecharge MayRequire="Ludeon.Rimworld.Biotech">3</WastepacksPerRecharge>
      <FoodPoisonChance>0</FoodPoisonChance>
    </statBases>
    <race>
      <body>DMS_Caterpillar</body>
      <nameGenerator>DMS_VanguardMechHeavy</nameGenerator>
      <baseBodySize>3</baseBodySize>
      <baseHealthScale>5</baseHealthScale>
      <mechWeightClass>UltraHeavy</mechWeightClass>
      <mechFixedSkillLevel>18</mechFixedSkillLevel>
      <mechWorkTypePriorities>
        <Art>4</Art>
        <Crafting>4</Crafting>
        <Tailoring>3</Tailoring>
        <Smithing>2</Smithing>
        <Doctor>1</Doctor>
      </mechWorkTypePriorities>
      <mechEnabledWorkTypes>
        <li>Crafting</li>
        <li>Art</li>
        <li>Smithing</li>
        <li>Tailoring</li>
        <li>Doctor</li>
      </mechEnabledWorkTypes>
    </race>
    <comps>
      <li Class="CompProperties_ProjectileInterceptor">
        <radius>2</radius>
        <interceptGroundProjectiles>true</interceptGroundProjectiles>
        <color>(0.4, 0.4, 0.6)</color>
        <reactivateEffect>BulletShieldGenerator_Reactivate</reactivateEffect>
        <activeSound>BulletShield_Ambience</activeSound>
        <hitPoints>300</hitPoints>
        <hitPointsRestoreInstantlyAfterCharge>true</hitPointsRestoreInstantlyAfterCharge>
        <chargeDurationTicks>1800</chargeDurationTicks><!-- 30s -->
        <rechargeHitPointsIntervalTicks>120</rechargeHitPointsIntervalTicks>
        <minIdleAlpha>0.5</minIdleAlpha>
        <drawWithNoSelection>false</drawWithNoSelection>
        <disarmedByEmpForTicks>3000</disarmedByEmpForTicks>
        <gizmoTipKey>ProjectileInterceptorTip</gizmoTipKey>
      </li>
    </comps>
    <tools Inherit="False">
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>25</power>
        <cooldownTime>5.6</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
      <li>
        <label>laser cutter</label>
        <capacities>
          <li>Demolish</li>
        </capacities>
        <power>20</power>
        <cooldownTime>1.6</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
      <li>
        <label>surgical drill</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>15</power>
        <cooldownTime>1.6</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
    </tools>
    <damageMultipliers>
      <li>
        <damageDef>Blunt</damageDef>
        <multiplier>0.75</multiplier>
      </li>
      <li>
        <damageDef>Stab</damageDef>
        <multiplier>0.5</multiplier>
      </li>
    </damageMultipliers>
    <killedLeavingsPlayerHostile>
      <Neurocomputer>1</Neurocomputer>
    </killedLeavingsPlayerHostile>
  </ThingDef>
  
  <PawnKindDef ParentName="BaseAutomatroidKind">
    <defName>DMS_Mech_HermitCrab</defName>
    <label>hermit Crab</label>
    <race>DMS_Mech_HermitCrab</race>
    <combatPower>500</combatPower>
    <maxPerGroup>10</maxPerGroup>
    <isFighter>false</isFighter>
    <destroyGearOnDrop>true</destroyGearOnDrop>
    <lifeStages>                                                                 <!--身體圖片-->
      <li>
        <bodyGraphicData>
          <texPath>Things/Automatroid/hermitCrab</texPath>
          <shaderType>CutoutComplex</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>2.5</drawSize>
          <shadowData>
            <volume>(2,2,2)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Automatroid/hermitCrab</texPath>
          <shaderType>CutoutComplex</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>2.5</drawSize>
          <shadowData>
            <volume>(2,2,2)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponTags />
    <weaponMoney>0~100</weaponMoney>
  </PawnKindDef>

</Defs>