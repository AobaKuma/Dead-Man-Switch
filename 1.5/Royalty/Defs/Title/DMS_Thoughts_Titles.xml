<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ============================= Thoughts related to royal titles ============================= -->

  <ThoughtDef>
    <defName>DMS_GainedTitle</defName>
    <durationDays>3</durationDays>
    <thoughtClass>Thought_MemoryRoyalTitle</thoughtClass>
    <nullifyingTraits><li>Ascetic</li></nullifyingTraits>
    <stages>
      <li>
        <label>Received {TITLE} title</label>
        <description>I've got promoted to {TITLE}. I love the recognition!</description>
        <baseMoodEffect>8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>DMS_LostTitle</defName>
    <durationDays>3</durationDays>
    <thoughtClass>Thought_MemoryRoyalTitle</thoughtClass>
    <nullifyingTraits><li>Ascetic</li></nullifyingTraits>
    <stages>
      <li>
        <label>Lost military rank</label>
        <description>I lost my military rank.</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>