<?xml version="1.0" encoding="utf-8"?>
<Patch>
    
    <!--give CE grenades to birdy-->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="DMS_Machine_VerlingBird"]/modExtensions/li[@Class="DMS.MechWeaponExtension"]/UsableWeaponTags</xpath>
            <value>
                <li>CE_AI_Grenade</li>
            </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/PawnKindDef[defName="DMS_Machine_VerlingBirdA"]/weaponTags</xpath>
            <value>
                <li>CE_GrenadeFlashbang</li>
                <li>GrenadeDestructive</li>
                <li>GrenadeEMP</li>
                <li>GrenadeSmoke</li>
                <li>GrenadeFlame</li>
                <li>CE_GrenadeNeolithic</li>
            </value>
    </Operation>

    <!--LAW for Birdy -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="CE_DisposableRocketLauncher"]/weaponTags</xpath>
		<value>
			<li>VerlingBird_Weapon</li>
		</value>
	</Operation>



</Patch>