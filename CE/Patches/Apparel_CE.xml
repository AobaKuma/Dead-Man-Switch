<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Combat Extended</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>


				<!--Hazard suit-->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DMS_Apparel_HazardSuit"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>1.5</ArmorRating_Sharp>
					</value>
				</li>
                <li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DMS_Apparel_HazardSuit"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>3</ArmorRating_Blunt>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="DMS_Apparel_HazardSuit"]/statBases</xpath>
					<value>
						<Bulk>18</Bulk>
						<WornBulk>10</WornBulk>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="DMS_Apparel_HazardSuit"]/equippedStatOffsets</xpath>
					<value>
						<AimingAccuracy>-0.1</AimingAccuracy>
						<SmokeSensitivity>-1</SmokeSensitivity>
					</value>
				</li>
                <li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="DMS_Apparel_HazardSuit"]/apparel/bodyPartGroups</xpath>
					<value>
						<li>Hands</li>
						<li>Feet</li>
					</value>
				</li>
                <li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="DMS_Apparel_HazardSuit"]/apparel/layers</xpath>
					<value>
						<li>StrappedHead</li>
					</value>
				</li>


				<!--Bionic suit-->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DMS_Apparel_BionicSuit"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>4</ArmorRating_Sharp>
					</value>
				</li>
                <li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DMS_Apparel_BionicSuit"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>5</ArmorRating_Blunt>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="DMS_Apparel_BionicSuit"]/statBases</xpath>
					<value>
						<Bulk>10</Bulk>
						<WornBulk>6</WornBulk>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="DMS_Apparel_BionicSuit"]/equippedStatOffsets</xpath>
					<value>
						<CarryWeight>10</CarryWeight>
					</value>
				</li>


				<!--Army cap-->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DMS_Apparel_ArmyCap"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>0.01</ArmorRating_Sharp>
					</value>
				</li>
                <li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DMS_Apparel_ArmyCap"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>0.01</ArmorRating_Blunt>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="DMS_Apparel_ArmyCap"]/statBases</xpath>
					<value>
						<Bulk>2</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>

                <!--PASGT-->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DMS_Apparel_TacticalHelmet"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>4.5</StuffEffectMultiplierArmor>
						<Bulk>3</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DMS_Apparel_TacticalHelmet"]/stuffCategories/li[.="Metallic"]</xpath>
					<value>
						<li>Steeled</li>
					</value>
				</li>


				<!--Tactical Vest-->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DMS_Apparel_TacticalVest"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>8.5</StuffEffectMultiplierArmor>
						<Bulk>6</Bulk>
						<WornBulk>3</WornBulk>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DMS_Apparel_TacticalVest"]/statBases/Mass</xpath>
					<value>
						<Mass>9</Mass>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="DMS_Apparel_TacticalVest"]/stuffCategories/li[.="Metallic"]</xpath>
					<value>
						<li>Steeled</li>
					</value>
				</li>
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName="DMS_Apparel_TacticalVest"]/equippedStatOffsets/MoveSpeed</xpath>
				</li>
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName="DMS_Apparel_TacticalVest"]</xpath>
					<value>
						<li Class="CombatExtended.PartialArmorExt">
							<stats>
								<li>
									<ArmorRating_Sharp>0.60</ArmorRating_Sharp>
									<parts>
										<li>Neck</li>
										<li>Shoulder</li>
									</parts>
								</li>
								<li>
									<ArmorRating_Blunt>0.60</ArmorRating_Blunt>
									<parts>
										<li>Neck</li>
										<li>Shoulder</li>
									</parts>
								</li>
							</stats>
						</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>