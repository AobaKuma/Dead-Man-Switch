<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef Name="DMS_MechConstructorFormingBase" ParentName="MechGestatorFormingBase">
    <defName>DMS_MechConstructorForming</defName>
    <graphicData>
      <texPath>Things/Building/Constructor/MechBuilder_Glass</texPath>
      <shaderParameters>
        <_MistOpacityTex>/Things/Building/Constructor/MechBuilder_Glass</_MistOpacityTex>
        <_ScanOffset>-0.11</_ScanOffset>
        <_ScanScale>12.5</_ScanScale>
      </shaderParameters>
      <drawSize>(4, 4)</drawSize>
    </graphicData>
  </ThingDef> 

  <ThingDef ParentName="DMS_MechConstructorFormingBase">
    <defName>DMS_MechConstructorCycleComplete</defName>
    <graphicData>
      <color>(1, 0.36, 0)</color>
    </graphicData>
  </ThingDef>

  <!-- Mech gestator - Formed -->
  <ThingDef ParentName="DMS_MechConstructorFormingBase">
    <defName>DMS_MechConstructorFormed</defName>
    <graphicData>
      <color>(0.2, 1, 0.15)</color>
    </graphicData>
  </ThingDef>

  <WorkGiverDef>
    <defName>DMS_DoBillsMechConstructor</defName>
    <label>make things at automatroid constructor</label>
    <giverClass>WorkGiver_DoBill</giverClass>
    <workType>Smithing</workType>
    <priorityInType>200</priorityInType>
    <fixedBillGiverDefs>
      <li>DMS_MechGestatorSamll</li>
    </fixedBillGiverDefs>
    <verb>work at</verb>
    <gerund>working at</gerund>
    <requiredCapacities>
      <li>Manipulation</li>
    </requiredCapacities>
    <prioritizeSustains>true</prioritizeSustains>
  </WorkGiverDef>

  <ThingDef ParentName="MechGestatorBase">
    <defName>DMS_MechGestatorSamll</defName>
    <label>automatroid constructor</label>
    <description>Todo.</description>
    <graphicData>
      <texPath>Things/Building/Constructor/MechBuilder_Base</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(4, 4)</drawSize>
      <shadowData>
        <volume>(3.8, 3, 2.7)</volume>
      </shadowData>
    </graphicData>
    <uiIconPath>Things/Building/Constructor/MechBuilder_Icon</uiIconPath>
    <uiIconScale>1.5</uiIconScale>
    <interactionCellOffset>(0,0,2)</interactionCellOffset>
    <statBases>
      <MaxHitPoints>350</MaxHitPoints>
      <WorkToBuild>16000</WorkToBuild>
      <Mass>35</Mass>
      <Flammability>0.5</Flammability>
    </statBases>
    <size>(3,3)</size>
    <costList>
      <Steel>300</Steel>
      <ComponentIndustrial>6</ComponentIndustrial>
    </costList>
    <researchPrerequisites>
      <li>StandardMechtech</li>
    </researchPrerequisites>
    <building>
      <barDrawData>
        <north>
          <preRotationOffset>(0, 0)</preRotationOffset>
          <size>(0.0, 0.0)</size>
        </north>
        <south>
          <preRotationOffset>(0, 0)</preRotationOffset>
          <size>(0.0, 0.0)</size>
        </south>
        <east>
          <preRotationOffset>(0, 0)</preRotationOffset>
          <size>(0.0, 0.0)</size>
        </east>
        <west>
          <preRotationOffset>(0, 0)</preRotationOffset>
          <size>(0.0, 0.0)</size>
        </west>
      </barDrawData>
      <formingGraphicData>
        <texPath>Things/Pawn/Mechanoid/HalfGestatedMechLarge</texPath>
        <graphicClass>Graphic_Single</graphicClass>
        <drawSize>(1.65,1.65)</drawSize>
      </formingGraphicData>
      <formingMechBobSpeed>0.0005</formingMechBobSpeed>
      <formingMechYBobDistance>0.05</formingMechYBobDistance>
      <formingMechPerRotationOffset>
        <li>(0, 0, 0.225)</li>
        <li>(0, 0, 0.225)</li>
        <li>(0, 0, 0.225)</li>
        <li>(0, 0, 0.225)</li>
      </formingMechPerRotationOffset>
      <mechGestatorCylinderGraphic>
        <texPath>Things/Building/Constructor/MechBuilder_Glass</texPath>
        <graphicClass>Graphic_Multi</graphicClass>
        <drawSize>(4, 4)</drawSize>
        <shaderType>Transparent</shaderType>
      </mechGestatorCylinderGraphic>
      <mechGestatorTopGraphic>
        <texPath>Things/Building/Constructor/MechBuilder_Top</texPath>
        <graphicClass>Graphic_Multi</graphicClass>
        <drawSize>(4, 4)</drawSize>
      </mechGestatorTopGraphic>
      <gestatorFormingMote>
        <north>DMS_MechConstructorForming</north>
        <east>DMS_MechConstructorForming</east>
        <west>DMS_MechConstructorForming</west>
        <south>DMS_MechConstructorForming</south>
      </gestatorFormingMote>
      <gestatorCycleCompleteMote>
        <north>DMS_MechConstructorCycleComplete</north>
        <east>DMS_MechConstructorCycleComplete</east>
        <west>DMS_MechConstructorCycleComplete</west>
        <south>DMS_MechConstructorCycleComplete</south>
      </gestatorCycleCompleteMote>
      <gestatorFormedMote>
        <north>DMS_MechConstructorFormed</north>
        <east>DMS_MechConstructorFormed</east>
        <west>DMS_MechConstructorFormed</west>
        <south>DMS_MechConstructorFormed</south>
      </gestatorFormedMote>
    </building>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <recipes>
      <li>Pikeman</li>
      <li>Scorcher</li>
      <li>Scyther</li>
      <li>Tunneler</li>
      <li>Lancer</li>
      <li>Tesseron</li>
      <li>Legionary</li>
      <li>CentipedeGunner</li>
      <li>CentipedeBurner</li>
      <li>CentipedeBlaster</li>
      <li>Diabolus</li>
      <li>Centurion</li>
      <li>Warqueen</li>
      <li>ResurrectMediumMech</li>
      <li>ResurrectHeavyMech</li>
      <li>ResurrectUltraheavyMech</li>
    </recipes>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>500</basePowerConsumption>
        <idlePowerDraw>50</idlePowerDraw>
      </li>
    </comps>
  </ThingDef>

</Defs>