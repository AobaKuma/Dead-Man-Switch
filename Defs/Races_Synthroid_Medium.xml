<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="BaseAutomatroid" Name="DMS_BaseSynthroidRace" Abstract="True">
    <thingClass>DMS.HumanlikeMech</thingClass>
    <inspectorTabs Inherit="False">
      <li>ITab_Pawn_Health</li>
      <li>ITab_Pawn_Needs</li>
      <li>ITab_Pawn_Character</li>
      <li>ITab_Pawn_Training</li>
      <li>ITab_Pawn_Social</li>
      <li>ITab_Pawn_Guest</li>
      <li>ITab_Pawn_Prisoner</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">ITab_Pawn_Slave</li>
      <li MayRequire="Ludeon.RimWorld.Biotech">ITab_Pawn_Feeding</li>
      <li MayRequire="Ludeon.RimWorld.Biotech">ITab_Genes</li>
      <li MayRequire="Ludeon.RimWorld.Biotech">ITab_GenesPregnancy</li>
      <li>ITab_Pawn_FormingCaravan</li>
      <li>DMS.ITab_Mech_Gear</li>
      <li>ITab_Pawn_Log</li>
    </inspectorTabs>
    <race>
      <makesFootprints>true</makesFootprints>
      <body>DMS_Synthroid</body>
      <mechEnabledWorkTypes>
        <li>Hauling</li>
        <li>Construction</li>
        <li>PlantCutting</li>
        <li>Growing</li>
        <li>Cleaning</li>
        <li>Firefighter</li>
        <li>Doctor</li>
      </mechEnabledWorkTypes>
      <lifeStageAges Inherit="False">
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Mech_Legionary_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Legionary_Death</soundDeath>
          <soundCall>Pawn_Mech_Legionary_Call</soundCall>
        </li>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>100</minAge>
          <soundWounded>Pawn_Mech_Legionary_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Legionary_Death</soundDeath>
          <soundCall>Pawn_Mech_Legionary_Call</soundCall>
        </li>
      </lifeStageAges>
    </race>
    <tools>
      <li>
        <label>left fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <comps>
      <li Class="DMS.CompProperties_MechApparel"></li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="DMS_BaseSynthroidRace">
    <defName>DMS_Synthroid_Male</defName>
    <label>Synthroid Type-M</label>
    <description>A synthetic automatriod, capable to use human weapon and equipment. It is the product of the combination of biogenetic engineering and war industry.</description>

    <statBases>
      <MarketValue>2000</MarketValue>
      <MoveSpeed>5</MoveSpeed>
      <BandwidthCost>2</BandwidthCost>
      <ControlTakingTime>30</ControlTakingTime>
    </statBases>
    <modExtensions>
      <li Class="DMS.HumanlikeMechExtension">
        <bodyTypeOverride>Male</bodyTypeOverride>
        <headGraphic>
          <texPath>Things/Synthroid/Head/Head_Cubic</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.4</drawSize>
        </headGraphic>
        
        <headOffset>(0,0,0.3)</headOffset>
      </li>
    </modExtensions>
  </ThingDef>

  <PawnKindDef ParentName="BaseMechanoidKind">
    <defName>DMS_SynthroidKind_Male</defName>
    <label>Synthroid</label>
    <race>DMS_Synthroid_Male</race>
    <combatPower>150</combatPower>
    <apparelAllowHeadgearChance>0</apparelAllowHeadgearChance>
    <apparelMoney>350~600</apparelMoney>
    <apparelTags>
      <li>IndustrialBasic</li>
      <li>IndustrialAdvanced</li>
      <li>IndustrialMilitaryBasic</li>
      <li>BeltDefensePop</li>
    </apparelTags>
    <aiAvoidCover>false</aiAvoidCover>
    <canStrip>true</canStrip>
    <allowInMechClusters>false</allowInMechClusters>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Synthroid/Body/Synthroid_Male</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.4</drawSize>
          <shadowData>
            <volume>(0.6, 0.8, 0.6)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Synthroid/Body/Synthroid_Male</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.4</drawSize>
          <shadowData>
            <volume>(0.6, 0.8, 0.6)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponMoney>9999~9999</weaponMoney>
    <weaponTags>
      <li>DMS_LMG</li>
    </weaponTags>
    <techHediffsChance>1</techHediffsChance>
    <techHediffsMoney>9999~9999</techHediffsMoney>
    <controlGroupPortraitZoom>1.2</controlGroupPortraitZoom>
  </PawnKindDef>
 
</Defs>